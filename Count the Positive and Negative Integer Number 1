import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int arr[] = new int[n];
        for(int i=0;i<n;i++){
            arr[i] = in.nextInt();
        }
        float countpos = 0;
        float countneg = 0;
        for(int i=0;i<n;i++){
            if(arr[i]<0){
                countneg++;
            }
            
            else{
                countpos++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f",countpos);
        System.out.printf("\nCount of Negative Integer is %.2f",countneg);
    }
}
